# ============================================================================
# CREDIT OS ENVIRONMENT VARIABLES
# ============================================================================
# Copy this file to .env.local and fill in your actual values

# ============================================================================
# GENERAL CONFIGURATION
# ============================================================================
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ============================================================================
# SUI BLOCKCHAIN CONFIGURATION
# ============================================================================
# Sui network: mainnet, testnet, devnet, localnet
SUI_NETWORK=testnet

# Sui RPC URL (optional, defaults to public RPC for selected network)
SUI_RPC_URL=

# Credit OS Move package ID (deployed smart contracts)
SUI_PACKAGE_ID=

# Admin private key for sponsored transactions and contract calls
# WARNING: Keep this secure in production!
SUI_ADMIN_PRIVATE_KEY=

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
# MongoDB connection string
MONGODB_URI=mongodb://localhost:27017/credit_os

# Database name
MONGODB_DB_NAME=credit_os

# ============================================================================
# AUTHENTICATION & SECURITY
# ============================================================================
# JWT secret for session tokens
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Session encryption key
SESSION_SECRET=your-session-encryption-key-change-this

# Password hashing rounds
BCRYPT_ROUNDS=12

# ============================================================================
# EXTERNAL SERVICES - KYC/KYB
# ============================================================================
# Jumio KYC service
JUMIO_API_KEY=
JUMIO_API_SECRET=
JUMIO_WEBHOOK_SECRET=

# Alternative: Onfido KYC service
ONFIDO_API_KEY=
ONFIDO_WEBHOOK_SECRET=

# Alternative: SumSub KYC service
SUMSUB_API_KEY=
SUMSUB_SECRET_KEY=

# ============================================================================
# EXTERNAL SERVICES - COMMUNICATION
# ============================================================================
# SendGrid email service
SENDGRID_API_KEY=
FROM_EMAIL=noreply@creditos.com

# Alternative: AWS SES
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1

# Twilio SMS service
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_FROM_NUMBER=

# ============================================================================
# EXTERNAL SERVICES - FILE STORAGE
# ============================================================================
# AWS S3 (optional, defaults to MongoDB GridFS)
AWS_S3_BUCKET=
AWS_S3_REGION=us-east-1

# IPFS (optional)
IPFS_API_URL=
IPFS_GATEWAY_URL=

# ============================================================================
# EXTERNAL SERVICES - ORACLES (Phase 2)
# ============================================================================
# Zillow property valuation API
ZILLOW_API_KEY=

# CoreLogic property data
CORELOGIC_API_KEY=

# Chainlink price feeds
CHAINLINK_API_KEY=

# Pyth network
PYTH_API_KEY=

# ============================================================================
# PAYMENT PROCESSING
# ============================================================================
# Stripe for card payments
STRIPE_PUBLIC_KEY=
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# Alternative: Square
SQUARE_APPLICATION_ID=
SQUARE_ACCESS_TOKEN=
SQUARE_WEBHOOK_SECRET=

# ============================================================================
# MONITORING & ANALYTICS
# ============================================================================
# Sentry error tracking
SENTRY_DSN=

# Google Analytics
NEXT_PUBLIC_GA_ID=

# Mixpanel analytics
MIXPANEL_TOKEN=

# ============================================================================
# REDIS CONFIGURATION (Optional - for caching and sessions)
# ============================================================================
REDIS_URL=redis://localhost:6379

# ============================================================================
# FEATURE FLAGS (Override defaults)
# ============================================================================
# Phase 1 Features (Core Platform)
ENABLE_ACCOUNT_ABSTRACTION=true
ENABLE_RWA_COLLATERAL=true
ENABLE_CRYPTO_COLLATERAL=true
ENABLE_INTERNAL_CREDIT_BUREAU=true
ENABLE_FRAUD_DETECTION=true
ENABLE_WITHDRAWAL_INCENTIVES=true

# Phase 2 Features (Asset Tokenization) - Disabled by default
ENABLE_ASSET_TOKENIZATION=false
ENABLE_FRACTIONALIZATION=false
ENABLE_SECONDARY_TRADING=false
ENABLE_ORACLE_INTEGRATION=false

# Phase 3 Features (Yield Products) - Disabled by default
ENABLE_YIELD_PRODUCTS=false
ENABLE_RENTAL_INCOME=false
ENABLE_INVOICE_FACTORING=false
ENABLE_ROYALTY_SECURITIES=false

# Phase 4 Features (Cross-Chain) - Disabled by default
ENABLE_CROSS_CHAIN=false
ENABLE_ETHEREUM=false
ENABLE_POLYGON=false
ENABLE_ARBITRUM=false

# ============================================================================
# DEVELOPMENT & TESTING
# ============================================================================
# Enable debug logging
DEBUG=credit-os:*

# Test database (separate from main database)
TEST_MONGODB_URI=mongodb://localhost:27017/credit_os_test

# Disable certain security features in development
DEV_DISABLE_RATE_LIMITING=true
DEV_DISABLE_DEVICE_FINGERPRINTING=false
DEV_DISABLE_GEO_VALIDATION=true

# ============================================================================
# PRODUCTION SECURITY
# ============================================================================
# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,https://creditos.com

# Helmet security headers
HELMET_CONTENT_SECURITY_POLICY=true
HELMET_HSTS=true

# ============================================================================
# BUSINESS CONFIGURATION
# ============================================================================
# Fee structure (in basis points)
RWA_FACILITATION_FEE=500
ASSET_UPLOAD_FEE=1000
TRADING_FEE=25

# Limits
MAX_LTV=3000
LIQUIDATION_LTV=6000
MAX_LOAN_DURATION_DAYS=365

# Incentives
NEW_USER_FREE_CRYPTO_WITHDRAWALS=3
NEW_USER_FREE_CARD_MAINTENANCE_DAYS=30